<UserControl
    x:Class="WpfInstagram.UserControls.PostLikedBy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:WpfInstagram.Extensions"
    xmlns:local="clr-namespace:WpfInstagram"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel
        Margin="3,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <TextBlock>
            Liked By
        </TextBlock>

        <TextBlock
            x:Name="CloseFriend1"
            Margin="3,0,0,0"
            Cursor="Hand"
            FontWeight="Bold"
            MouseDown="CloseFriend_MouseDown" />
        <TextBlock
            x:Name="CloseFriend2"
            Margin="3,0,3,0"
            Cursor="Hand"
            FontWeight="Bold"
            MouseDown="CloseFriend_MouseDown" />
        <TextBlock
            Name="OtherFriends"
            Margin="3,0,3,0"
            Text="and 45 others" />
    </StackPanel>
</UserControl>
