<Page
    x:Class="WpfInstagram.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:WpfInstagram.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfInstagram"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomePage"
    Width="500"
    Height="500"
    mc:Ignorable="d">
    <ScrollViewer
        x:Name="PostsScrollViewer"
        ScrollChanged="PostsScrollViewer_ScrollChanged"
        VerticalScrollBarVisibility="Hidden">
        <StackPanel x:Name="PostsStackPanel" />
    </ScrollViewer>
</Page>